# SHELL INTEGRATION
shell_integration disabled

# FONT
# font_family SFMono Nerd Font
font_size   15.0

modify_font cell_height -5px
modify_font baseline 3

modify_font cell_width -1px

scrollback_lines 10000

# WINDOW
draw_minimal_borders yes
window_border_width 0
titlebar-and-corners
active_border_color none

initial_window_width 470
initial_window_height 850
window_padding_width 0 

background_opacity 0.8
# background_blur 32

# THEME
include blackmetal.conf


# BEGIN_KITTY_FONTS
font_family      family="Liga SFMono Nerd Font"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
